<%= form_tag('/session', method: :post) do %>

    <div class="field">
      <%= label_tag "user[name]", "Your name:" %>
      <%= text_field_tag "user[name]"%>
    </div>
  
    <div class="field">
      <%= label_tag("user[password]", "Your password:") %>
      <%= password_field_tag "user[password]" %>
    </div>
  
    <div class="actions">
      <%= submit_tag("Log In") %>
    </div>
  
<% end %> 
Or <br>
<%= link_to('Log in with github!', '/auth/github', method: :post) %>
