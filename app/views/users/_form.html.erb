<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
        </h2>
  
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
   
    <div class="field <%= ' field_with_errors' if @user.errors[:name].any? %>">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :wallet, "How much money do you want to deposit?" %>
      <br>
      <%= f.number_field :wallet, class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :address %>
      <br>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :email %>
      <br>
      <%= f.email_field :email, class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :admin, "Check box if you are the admin" %>
      <%= f.check_box :admin, class: "form-check-input" %>
    </div>
  
    
  
    <div class="actions">
      <br/>
      <%= f.submit %>
    </div>
  
  <% end %>