

<div class="center">

  <div class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>Address:</strong> <%= @user.address %></p>
    <p><strong>Email:</strong>  <%= @user.email %></p>
    <p><strong>Wallet:</strong> $<%= @user.wallet %> </p>
    <p><%= link_to "See #{@user.name}'s Sales", user_sales_path(@user) %></p>
    <p><%= link_to "New Sale", new_user_sale_path(@user) if @user.id == current_user.id %></p>
    <%= button_to "Edit", edit_user_path(@user), method: 'get' %>
    <%= button_to "Log Out", session_path, method: "delete" %>
  </div>
</div> 